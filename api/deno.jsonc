{
  "tasks": {
    "dev": "deno run -A --watch main.ts",
    "prod": "docker build -t waveformr-api --build-arg GIT_REVISION=$GIT_REVISION . && docker run -p 8080:8080 --name wapi waveformr-api",
    "deploy": "GIT_REVISION=$(git rev-parse HEAD); fly deploy --build-arg GIT_REVISION=$GIT_REVISION"
  },
  "lint": {
    "rules": {
      "exclude": ["prefer-const"]
    }
  }
}
